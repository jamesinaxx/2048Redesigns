{
    "name": "2048 Reworks",
    "version": "0.2.0",
    "description": "– Some Remakes of the 2048 game –",
    "author": ["JamesAfk", "Alex Petrosh", "Simon Owen"],
    "permissions": [
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "source/scripts/chrome/main.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "source/assets/icons/chrome/16.png",
            "32": "source/assets/icons/chrome/32.png",
            "48": "source/assets/icons/chrome/48.png",
            "128": "source/assets/icons/chrome/128.png"
        },
        "default_title": "2048 Cupcake Edition"
    },
    "icons": {
        "16": "source/assets/icons/chrome/16.png",
        "32": "source/assets/icons/chrome/32.png",
        "48": "source/assets/icons/chrome/48.png",
        "128": "source/assets/icons/chrome/128.png"
    },
    "manifest_version": 2
}